#include <iostream>

using namespace std;

int main()
{
   int y;
   cin >> y;
   int a, b, c, d;
   while(y<=9012){
    y++;
    a = y%10;
    b = (y/10)%10;
    c = (y/100)%10;
    d = (y/1000)%10;
    if(a!=b && b!=c && c!=d && a!=d && a!=c && b!=d){
        cout << y;
        break;
    }
   }
    return 0;
}
