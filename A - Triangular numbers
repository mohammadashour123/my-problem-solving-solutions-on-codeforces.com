#include<bits/stdc++.h>
using namespace std;

int main()
{

    long long n;
    cin>>n;

    long long b=0;

    for(long long i=1;i<=500;i++)
    {
        long long a=(i*(i+1))/2;

        if(n==a)
        {
            b=1;
            cout<<"YES";
            break;
        }
    }
    if(b==0)
    {
        cout<<"NO";
    }
}
