#include <iostream>
#include <string>
#include <vector>
 
using namespace std;
 
int main()
{
    int n, x=0;
    cin >> n;
    vector<string>s(n);
    for(int i=0; i<n; i++){
        cin >> s[i];
    }
     for(int i=0; i<n; i++){
 
 
            if(s[i] == "X++" || s[i] == "++X"){
                x++;
            }
            else if(s[i] == "X--" || s[i] == "--X"){
                x--;
            }
        }
 
     cout << x;
 
    return 0;
}
