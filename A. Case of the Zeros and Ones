#include <iostream>
#include<vector>
#include <algorithm>
using namespace std;

int main()
{
    int n , zero =0 , one=0;
    cin >> n ;
    string g ;
    cin >> g ;
    for (int j = 0 ; j<n ; j++)
    {
       if(g[j]=='0')
        zero++ ;
       else
        one++ ;

    }
   if(zero>=one)
    cout << zero-one ;
   else
    cout << one-zero ;

    return 0;
}
