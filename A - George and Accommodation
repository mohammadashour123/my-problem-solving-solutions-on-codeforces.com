#include <iostream>

using namespace std;

int main()
{

    int num_of_rooms , people , r_capacity , c=0 ;
    cin >> num_of_rooms  ;

    for (int i = 0 ; i<num_of_rooms ; i++)
    {
        cin >> people >> r_capacity ;


        if(r_capacity-people>=2)
            ++c ;
    }



cout << c ;

    return 0;
}
