#include <iostream>
#include<string>
 
using namespace std;
 
int main()
{
    int ans = 0 ;
    string first , sec ;
    cin >> first;
    cin >>sec ;
    for(int i = 0 ; i<sec.size() ; i++)
    {
            if (first[ans] == sec[i])
            {
                ans+=1 ;
            }
    }
    cout <<ans +1 ;
    return 0 ;
}
